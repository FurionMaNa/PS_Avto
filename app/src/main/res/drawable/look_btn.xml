<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector >
            <item
                android:state_pressed="false"
                android:state_focused="false">
                <shape
                    android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <gradient
                        android:type="linear"
                        android:angle="-90"
                        android:startColor="#735AF6"
                        android:endColor="#735AF6" />
                </shape>
            </item>

            <item
                android:state_pressed="false"
                android:state_focused="true">
                <shape
                    android:shape="rectangle" >
                    <corners android:radius="10dp" />
                    <gradient
                        android:type="linear"
                        android:angle="-90"
                        android:startColor="#735AF6"
                        android:endColor="#735AF6" />
                </shape>
            </item>

            <item
                android:state_pressed="true"
                android:state_focused="false">
                <shape
                    android:shape="rectangle" >
                    <corners android:radius="10dp" />
                    <gradient
                        android:type="linear"
                        android:angle="-90"
                        android:startColor="#3E3185"
                        android:endColor="#3E3185" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>